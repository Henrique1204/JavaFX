   <children>
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" text="Calcular a soma">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumero1" layoutX="14.0" layoutY="45.0" promptText="Primeiro numero" />
      <TextField fx:id="txtNumero2" layoutX="14.0" layoutY="88.0" promptText="Segundo numero" />
      <Button fx:id="btnSomar" layoutX="14.0" layoutY="135.0" mnemonicParsing="false" onAction="#onBtnSomarAction" text="Somar" />
      <Label layoutX="12.0" layoutY="214.0" text="Resultado:" />
      <Label fx:id="labelResult" layoutX="85.0" layoutY="214.0" />
   </children>
</AnchorPane>
